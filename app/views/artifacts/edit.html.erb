<h2><%= title "Publicar Artefacto" %></h2>

<% form_for @artifact, :html => {:multipart => true} do |f| -%>
	<%= f.error_messages %>
	
	<%= f.label :name, 'Nombre' %>
	<%= f.text_field :name %>
	
	<%= f.label :format, 'Formato' %>
	
	<% if @artifact.mime %>
		<%= @artifact.mime %>		
	<% else %>
		<%= f.select :format, %w(pdf txt xls html) %>
	<% end %>
	
	<%= f.label :description, 'DescripciÃ³n' %>
	<%= f.text_area :description %>
	
	<br />
	<%= f.submit 'Publicar' %>
<% end -%>
